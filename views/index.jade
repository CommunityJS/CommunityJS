#container
  #header
    h1 CommunityJS.org
  #nav
    ul
      li 
        a(href= '/') User Groups
      li
        a(href= 'http://beerjs.com/') BeerJS
      li
        a(href= '/about') About
  #main
    h2 JavaScript User Groups & Conferences
    #map_canvas
    ul
      - for (var continent in tree)
        li= (continent == "Conference") ? "Conferences" : continent
          ul
            - for (var country in tree[continent].sortedCountries())
              li= country
                ul
                  - for (var state in tree[continent].sortedCountries()[country])
                    - if(state == 'no-state')
                      - for (var i = 0; i < tree[continent].sortedCountries()[country][state].length; i++)
                        li!= tree[continent].sortedCountries()[country][state][i]
                    - else 
                      li= state
                        ul
                          - for (var i = 0; i < tree[continent].sortedCountries()[country][state].length; i++)
                            li!= tree[continent].sortedCountries()[country][state][i]
    #footer 
